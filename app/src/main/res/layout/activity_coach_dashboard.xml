<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coach Dashboard"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Active Clients: 6\nPrograms Managed: 8\nCheck-ins Today: 2"
        android:background="#EEEEEE"
        android:padding="16dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnViewClients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Clients"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnCreateProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create / Adjust Program" />


</LinearLayout>

</ScrollView>