<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todayâ€™s Overview"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calories: 2,100 kcal\nProtein: 150g\ncarb: 200\nfat: 50\nWater: 1.8L"
            android:background="#EEEEEE"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnTrainingPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Training Plan"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnMacros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Macros"
            android:layout_marginBottom="12dp" />


        <Button
            android:id="@+id/btnWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight Progress" />

    </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="12sp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp" />

</FrameLayout>